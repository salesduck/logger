{
    "name": "@salesduck/logger",
    "version": "4.0.4",
    "description": "Allows you to record and transmit messages to the consumer",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "license": "MIT",
    "files": [
        "build",
        "!**/*spec.*"
    ],
    "scripts": {
        "clean": "rm -rf build && rm -rf ./tsconfig.build.tsbuildinfo",
        "build": "yarn clean && tsc --project ./tsconfig.build.json && tscpaths -p ./tsconfig.build.json -s ./src -o ./build",
        "lint": "yarn eslint --fix ./src",
        "release": "standard-version -t logger-v --path ./",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@salesduck/format-logs": "^4.0.0",
        "@salesduck/symbols-logs": "^4.0.0",
        "@salesduck/transport-logs": "^4.0.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^20.4.1",
        "jest": "^26.6.3",
        "standard-version": "^9.3.0",
        "ts-jest": "^26.5.5",
        "tscpaths": "^0.0.9",
        "typescript": "^4.9.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:salesduck/logger.git",
        "directory": "packages/logger"
    }
}
